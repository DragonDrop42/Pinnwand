<UserControl x:Class="Test.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab x:Name="tab_settings" Layout="List" SelectedSource="/Pages/Settings/KursAuswahl.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Kurse" Source="/Pages/Settings/KursAuswahl.xaml" />
                <mui:Link DisplayName="Aussehen" Source="/Pages/Settings/Appearance.xaml" />
                <mui:Link DisplayName="Über" Source="/Pages/Settings/About.xaml" />
                
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
