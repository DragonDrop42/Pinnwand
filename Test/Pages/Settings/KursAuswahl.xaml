<UserControl x:Name="pg_Kurswahl" x:Class="Test.Pages.Settings.Kurswahl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Kurswahl" Style="{StaticResource Heading2}" />
                <Button x:Name="cmd_refresh">Kurse Aktualisieren</Button>
                <ListView x:Name="lv_Kurse" Height="auto" Width="auto">
                </ListView>
                <Button x:Name="cmd_save">Speichern</Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
